@page
@model CourseManagement.Pages.AssignmentModel
@{
}
<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5 page-header">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white animated slideInDown">Assignment</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb justify-content-center">
                        <!--Cho nay la score-->
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
@if (Model.AssignmentQuestions != null && Model.AssignmentQuestions.Any())
{
    <form method="post">
        <input type="hidden" name="assignmentId" value="@Model.AssignId">
        @foreach (var question in Model.AssignmentQuestions)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@question.Question.QContent</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedAnswers[@question.Question.Qid]" value="1">
                        <label class="form-check-label">@question.Question.Opt1</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedAnswers[@question.Question.Qid]" value="2">
                        <label class="form-check-label">@question.Question.Opt2</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedAnswers[@question.Question.Qid]" value="3">
                        <label class="form-check-label">@question.Question.Opt3</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedAnswers[@question.Question.Qid]" value="4">
                        <label class="form-check-label">@question.Question.Opt4</label>
                    </div>
                </div>
            </div>
        }
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <p>No questions found.</p>
}
</div>
