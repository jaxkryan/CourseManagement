@page
@model CourseManagement.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<h1>Teachers</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Teachers)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Dob.ToShortDateString()</td>
                <td>@user.Address</td>
            </tr>
        }
    </tbody>
</table>
