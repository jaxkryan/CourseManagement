@page
@model CourseManagement.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Teachers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Teachers</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Add New Teacher
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Date of Birth</th>
                            <th>Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Teachers)
                        {
                            <tr>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Dob.ToShortDateString()</td>
                                <td>@user.Address</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-danger" onclick="confirmDelete('@user.Id')">
                                        <i class="fas fa-trash-alt me-1"></i>Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId) {
            if (confirm('Are you sure you want to delete this teacher?')) {
                window.location.href = '/Admin/Index?handler=Delete&userId=' + userId;
            }
        }
    </script>
}