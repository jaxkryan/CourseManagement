@page
@model CourseManagement.Areas.Admin.Pages.Teachers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Biography)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teacher) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TeacherId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.TeacherId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.TeacherId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
