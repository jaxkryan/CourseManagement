@page
@model LoginModel
@{
    Layout = null; 
    ViewData["Title"] = "Log in";
}
@* TODO: FIX LAYOUT!!!!!!!!!!!!!! *@
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Log in</h2>
                    <hr />
                    <form id="account" method="post">

                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input asp-for="Input.Email" id="inputEmail" class="form-control" autocomplete="username" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input asp-for="Input.Password" id="inputPassword" class="form-control" autocomplete="current-password" required />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Input.RememberMe" id="rememberMe" class="form-check-input" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Log in</button>
                            <a class="btn btn-outline-primary btn-lg" href="/">Cancel</a>
                        </div>

                        <div class="mt-3 text-center">
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
