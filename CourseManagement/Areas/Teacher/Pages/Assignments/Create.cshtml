@page
@model CourseManagement.Areas.Teacher.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Create</h1>


<form method="post">
    <div class="form-group">
        <label for="AssignmentTitle">Title</label>
        <input type="text" id="AssignmentTitle" name="AssignmentTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="DueDate">Due Date</label>
        <input type="date" id="DueDate" name="DueDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="CourseId">Course</label>
        <select id="CourseId" name="CourseId" class="form-control">
            @foreach (var course in Model.CourseList)
            {
                <option value="@course.Value">@course.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-page="./Index">Back to List</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
