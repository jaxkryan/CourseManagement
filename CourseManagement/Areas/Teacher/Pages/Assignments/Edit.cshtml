@page
@model CourseManagement.Areas.Teacher.Pages.Assignments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Edit</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assignment.AssignmentId" />
            <div class="form-group">
                <label asp-for="Assignment.CourseId" class="control-label"></label>
                <select asp-for="Assignment.CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="Assignment.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.AssignmentTitle" class="control-label"></label>
                <input asp-for="Assignment.AssignmentTitle" class="form-control" />
                <span asp-validation-for="Assignment.AssignmentTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.Description" class="control-label"></label>
                <input asp-for="Assignment.Description" class="form-control" />
                <span asp-validation-for="Assignment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.DueDate" class="control-label"></label>
                <input asp-for="Assignment.DueDate" class="form-control" />
                <span asp-validation-for="Assignment.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.CreatedAt" class="control-label"></label>
                <input asp-for="Assignment.CreatedAt" class="form-control" />
                <span asp-validation-for="Assignment.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
