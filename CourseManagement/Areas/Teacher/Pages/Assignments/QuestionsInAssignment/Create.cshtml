@page
@model CourseManagement.Areas.Teacher.Pages.Assignments.QuestionsInAssignment.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Add Question to Assignment @Model.AssignmentQuestion.AssignmentId</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AssignmentQuestion.AssignmentId" />
    <div class="form-group">
        <label asp-for="AssignmentQuestion.QuestionId" class="control-label"></label>
        <select asp-for="AssignmentQuestion.QuestionId" class="form-control" asp-items="ViewBag.QuestionId">
            <option value="">-- Select a Question --</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="./Index" asp-route-assignmentId="@Model.AssignmentQuestion.AssignmentId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
