@page
@model CourseManagement.Areas.Teacher.Pages.Assignments.QuestionsInAssignment.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Edit Assignment Question</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AssignmentQuestion.AssignmentId" />
    <input type="hidden" asp-for="AssignmentQuestion.QuestionId" />
    <div class="form-group">
        <label asp-for="AssignmentQuestion.QuestionId" class="control-label"></label>
        <select asp-for="AssignmentQuestion.QuestionId" class="form-control" asp-items="ViewBag.QuestionId">
            <option value="">-- Select a Question --</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="./Index" asp-route-assignmentId="@Model.AssignmentQuestion.AssignmentId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
