@page
@model CourseManagement.Areas.Teacher.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.CourseId" />
            <div class="form-group">
                <label asp-for="Course.CourseName" class="control-label"></label>
                <input asp-for="Course.CourseName" class="form-control" />
                <span asp-validation-for="Course.CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Description" class="control-label"></label>
                <input asp-for="Course.Description" class="form-control" />
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Instructor" class="control-label"></label>
                <select asp-for="Course.InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
                <span asp-validation-for="Course.InstructorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.CreatedAt" class="control-label"></label>
                <input asp-for="Course.CreatedAt" class="form-control" />
                <span asp-validation-for="Course.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Image" class="control-label"></label>
                <input asp-for="Course.Image" class="form-control" />
                <span asp-validation-for="Course.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
