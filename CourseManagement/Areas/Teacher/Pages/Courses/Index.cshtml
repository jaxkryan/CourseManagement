@page
@model CourseManagement.Areas.Teacher.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Instructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Course)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@($"{item.Instructor.FirstName} {item.Instructor.LastName}")</td>

                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>
                    <img src="@item.Image" alt="Image" style="max-width: 100px; height: auto;" />
                </td>

                <td>
                    <a asp-page="Edit" asp-route-id="@item.CourseId" class="btn btn-info">Edit</a>
                    <a asp-page="Details" asp-route-id="@item.CourseId" class="btn btn-secondary">Details</a>
                    <a asp-page="Delete" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
