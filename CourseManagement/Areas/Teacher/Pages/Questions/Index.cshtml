@page
@model CourseManagement.Areas.Teacher.Pages.Questions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Teacher/Pages/Shared/_TeacherLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Opt1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Opt2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Opt3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Opt4)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opt1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opt2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opt3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opt4)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Qid">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Qid">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Qid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
